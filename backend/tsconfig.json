{
  "compilerOptions": {
    "module": "CommonJS",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["ES6"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.d.ts"]
}
